<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card mb-5 ">
                <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %> Campground Image">
                <div class="card-body">
                    <h5 class="card-title fs-4">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text text-muted">
                        <%= campground.location %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= campground.description %>
                    </li>
                    <li class="list-group-item">RM <%= campground.price %>/night</li>
                </ul>
                <% if (currentUser && campground.author.equals(currentUser)) { %>
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/campground/<%= campground._id %>/edit"
                                class="btn btn-info card-link icon-link icon-link-hover">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pen" viewBox="0 0 16 16">
                                    <path
                                        d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                </svg>
                                Edit</a>
                            <form class="d-inline " action="/campground/<%= campground._id %>?__method=DELETE"
                                method="POST">
                                <button class="icon-link btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg"
                                        width="16" height="16" fill="currentColor" class="bi bi-trash3"
                                        viewBox="0 0 16 16">
                                        <path
                                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                    </svg>Delete</button>
                            </form>
                        </div>
                        <a href="/campground" class="card-link btn btn-secondary btn-lg rounded icon-link "><svg
                                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-house-fill" viewBox="0 0 16 16">
                                <path
                                    d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293z" />
                            </svg></a>
                    </div>
                    <% } %>
                        <div class="card-footer">
                            <!-- <small class="text-muted fs-6">
                        <% let minutesSinceUpdate=Math.floor((new Date() - new Date(campground.updatedAt)) / 60000); %>
                            <% if (minutesSinceUpdate < 60 * 24) { %>
                                Last updated <%= Math.floor(minutesSinceUpdate / 60) %> hours and <%= minutesSinceUpdate
                                        % 60 %> minutes ago
                                        <% } else { %>
                                            Last updated <%= new Date(campground.updatedAt).toLocaleDateString() %>
                                                <% } %>
                    </small> -->
                            <small class="text-muted fs-6">
                                Submitted by <%= campground.author.username %>
                            </small>
                        </div>
            </div>

        </div>
        <div class="col-6">
            <% if (currentUser) { %>
                <h2>Leave a Review</h2>
                <form action="/campground/<%= campground._id %>/review" method="POST" class="mb-3 needs-validation"
                    novalidate>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="review" class="form-label">Review</label>
                        <textarea class="form-control" id="review" name="review[body]" rows="3" required></textarea>
                        <div class="valid-feedback">Looks Good !</div>
                        <div class="invalid-feedback">Please leave a review‚ùó</div>
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
                <% } %>
                    <!-- <% if ( campground.reviews.length> 0) { %>
                    <h3 class="mb-3">
                        <%= campground.title %> Review
                    </h3>
                    <% } %> -->
                    <% for( let review of campground.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Rating <%= review.rating %>
                                </h5>
                                <div class="card- mb-2 text-muted">By : <%= review.author.username %>
                                </div>
                                <p class="card-text">
                                    Review: <%= review.body %>
                                </p>
                            </div>
                            <% if (currentUser && review.author.equals(currentUser)) { %>
                                <div class="card-footer">
                                    <form
                                        action="/campground/<%= campground._id %>/review/<%= review._id %>?__method=DELETE"
                                        method="POST"><button class="btn btn-danger">Delete</button></form>
                                </div>
                                <% } %>
                        </div>

                        <% } %>
        </div>
    </div>