<% layout('layouts/boilerplate') %>
<div id="map"></div>
<h1 class="mb-4 text-center">All Campgrounds</h1>
<% campgrounds.forEach(function(campground) { %>
<div class="card mb-4 bg-body-tertiary">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= campground.image[0].url %>" alt="Image of the Campground" class="img-fluid" id="img-index">
    </div>
    <div class="col-md-8">
      <div class="card-body py-5 px-4">
        <h5 class="card-title fs-4">
          <%= campground.title %>
        </h5>
        <p class="card-text">
          <small class="text-muted">
            <%= campground.location %>
          </small>
        </p>
        <p class="card-text mb-4">
          <%= campground.description %>
        </p>

        <a href="/campground/<%= campground._id %>" class="btn btn-dark">View
          Campground</a>
      </div>
    </div>
  </div>
</div>
<% }) %>

<script>
  const campground = {
    features: <%- JSON.stringify(campgrounds)%>
  }
</script>
<script src="/javascript/clusterMap.js"></script>